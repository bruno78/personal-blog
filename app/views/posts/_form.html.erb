<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
   <div id="errors">
     <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
   </div>
   <ul>
     <% @post.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
   </ul>
   <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :blurb %><br>
    <%= f.text_field :blurb %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
