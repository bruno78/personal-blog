<%= form_for @post, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
   <div id="errors">
     <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
   </div>
   <ul>
     <% @post.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
   </ul>
   <% end %>

  <div class="form-group" >
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :remote_image_url, "or image URL" %><br>
    <%= f.text_field :remote_image_url %>
  </div>

  <div class="form-group">
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url %><br>
    <% end %>
    <%= f.check_box :remove_image %>
      Remove image
  </div>

  <div class="form-group">
    <%= f.label :blurb %><br>
    <%= f.text_area :blurb, class: "form-control", id: "post-blurb" %>
  </div>

  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", id: "post-body" %>
  </div>

  <div class="form-group">
    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, placeholder: "Tags separated with comma", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-md btn-primary" %>
  </div>
<% end %>
